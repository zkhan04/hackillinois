{
  "manifest_version": 3,
  "name": "Focus Mode Toggle",
  "version": "1.0",
  "description": "Allows users to toggle Focus Mode on or off.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"]
}
